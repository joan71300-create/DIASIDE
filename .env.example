# Backend Environment Variables

# Secrets (VERY IMPORTANT: Change for production!)
SECRET_KEY=your_super_secret_key_here
ALGORITHM=HS256 # No need to change, just for reference
ACCESS_TOKEN_EXPIRE_MINUTES=30 # No need to change, just for reference
REFRESH_TOKEN_EXPIRE_DAYS=7 # No need to change, just for reference

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here
OPIK_API_KEY=your_opik_api_key_here

# Database
# For local development, SQLite is used by default in config.py.
# For production (e.g., Render.com), use a PostgreSQL URL:
DATABASE_URL=postgresql://user:password@host:port/database_name

# Simulation
ENABLE_SIMULATION_ENDPOINT=False # Set to True for dev/testing if needed

# Firebase (Paste the FULL JSON content of your service account key here)
# Make sure the entire content is on a single line, or properly escaped if multi-line.
FIREBASE_CREDENTIALS_JSON=
